# Application settings
APP_NAME=FastAPI App
APP_DESCRIPTION=FastAPI Application with SQLAlchemy, Alembic, and PostgreSQL
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# Database settings
DB_USERNAME=username
DB_PASSWORD=password
DB_HOST=hostname
DB_PORT=5432
DB_NAME=dbname
DB_SSLMODE=require

# JWT settings
JWT_SECRET=your-secret-key-should-be-at-least-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600  # 1 hour in seconds

# CORS settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Migration settings
IGNORE_MIGRATION_ERRORS=false  # Set to true in development if needed
